            <script>
              $(document).ready(function()
              {
                $("#city").suggestions({
                  token: "a95c52b4b782324e3ec6f197df2051e26476411c",
                  type: "ADDRESS",
                  hint: false,
                  bounds: "city",
                  /* Вызывается, когда пользователь выбирает одну из подсказок */
                  onSelect: function(suggestion) {
                    console.log(suggestion);
                  }
                });
